public class SumOfNumbers {
    public static int sum(int n) {
        if (n == 1) {
            return 1;
        } else {
            return n + sum(n - 1);
        }
    }
    
    public static void main(String[] args) {
        int sum = sum(10);
        System.out.println("Sum of numbers up to 10 is: " + sum);
    }
}
